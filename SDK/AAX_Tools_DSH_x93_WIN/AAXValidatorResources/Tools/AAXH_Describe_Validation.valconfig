process {
	id: "process_describevalidation"
	name: "Describe Validation Test"
	arguments {
		elem: "--bundle_path=\"$AAXVAL_PARAM_AAXPLUGIN$\""
		elem: "--uniq_id=$AAXVAL_PARAM_UNIQ_ID$"
	}
	platform_process {
		platform: E_PLATFORM_OSX
		invocation: "$AAXVAL_DIR_TOOLS$/CommandLineTools/DescribeValidationTest"
	}
	platform_process {
		platform: E_PLATFORM_WIN
		invocation: "$AAXVAL_DIR_TOOLS$\\DescribeValidationTest.exe"
	}
}

test {
	id: "test.describe_validation"
	name: "Plug-In Describe Validation Test"
	description: "Validation of the plug-in's configuration (Describe function)"
	
	module_id: "mod_tests_required"
	module_id: "mod_tests_fast"
	module_id: "mod_tests_config"
	module_id: "mod_tests_plat_any"
	category_id: "cat_reliability"
	
	process_id: "process_describevalidation"
    arguments {
		elem: "AAXH_Describe_Validation"
	}
}

