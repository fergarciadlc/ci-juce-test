<?xml version="1.0" encoding="UTF-8"?>

<view type="View" id="Header">
  <layout_if parameter="Filters Reveal" operator="=" value="0">
      <bounds x="0" y="0" width="168" height="50"/>
  </layout_if>
  <layout_if parameter="Filters Reveal" operator="=" value="1">
      <bounds x="0" y="0" width="22" height="188"/>
  </layout_if>
  <intercepts_mouse value="true"/>
  
  <view type="AltClickButton" id="Filters On/Off">
      <parameter id="Filters On/Off"/>
      <altclick_parameter id="EQ On/Off"/>
      <altclick_parameter id="Dynamics On/Off"/>
      <bounds x="5" y="2" width="12" height="13"/>
      <image_list id="state">
          <image id="" src="Icons/icn_power_off.png"/>
          <image id="" src="Icons/icn_power_on_green.png"/>
      </image_list>
      <toggles value="1"/>
	  <highlight thickness="1">
	      <color id="blue" red="0" green="100" blue="255" alpha="255"/> 
	  </highlight>
  </view>
  
  <view type="View" id="Text">
      <layout_if parameter="Filters Reveal" operator="=" value="0">
          <bounds x="20" y="5" width="33" height="10"/>
          <image id="background" src="WindowText/grphc_text_filters_horiz.png" stretch="false" x="0" y="0"/>
      </layout_if>
      <layout_if parameter="Filters Reveal" operator="=" value="1">
          <bounds x="8" y="20" width="10" height="33"/>
          <image id="background" src="WindowText/grphc_text_filters_vert.png" stretch="false" x="0" y="0"/>
      </layout_if>
      <intercepts_mouse value="false"/>
  </view>

</view>
