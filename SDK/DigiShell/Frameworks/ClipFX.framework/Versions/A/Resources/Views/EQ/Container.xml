<?xml version="1.0" encoding="UTF-8"?>

<view type="Reveal" id="EQ Section">
    <reveal id="Reveal EQ Button" width="22" height="188"/>
    <parameter id="EQ Reveal"/>
	<bounds x="247" y="0" width="560" height="188"/>
	<image id="open" src="UIGraphics/grphc_pane.png" stretch="true" x="0" y="0"/>
    <image id="closed" src="UIGraphics/grphc_pane.png" stretch="true" x="0" y="0"/>

    <intercepts_mouse value="true"/>
    <include src="./Header.xml"/>
    
    <view type="Button" id="Reveal EQ Button">
        <layout_if parameter="EQ Reveal" operator="=" value="0">
            <bounds x="544" y="172" width="16" height="15"/>
        </layout_if>
        <layout_if parameter="EQ Reveal" operator="=" value="1">
            <bounds x="6" y="172" width="16" height="15"/>
        </layout_if>
        <parameter id="EQ Reveal"/>
        <image_list id="state">
            <image id="" src="Buttons/show_pane_locations_hide.png"/>
            <image id="" src="Buttons/show_pane_locations.png"/>
        </image_list>
        <toggles value="true"/>
    </view>
    
    <view type="View" id="EQMainContent">
        <bounds x="0" y="0" width="560" height="188"/>
        <intercepts_mouse value="false"/>
        <show_if parameter="EQ Reveal" operator="=" value="0"/>
        
        <view type="View" id="EQ Background">
            <bounds x="10" y="21" width="288" height="154"/>
            
            <layout_if>
                <layout_if parameter="EQ On/Off" operator="=" value="0"/>
                <layout_if parameter="EQ Range" operator="=" value="0"/>
                <image_list id="background" src="Graph_Backgrounds/grphc_eq_12dB_OFF.png"/>
            </layout_if>
            
            <layout_if>
                <layout_if parameter="EQ On/Off" operator="=" value="0"/>
                <layout_if parameter="EQ Range" operator="=" value="1"/>
                <image_list id="background" src="Graph_Backgrounds/grphc_eq_24dB_OFF.png"/>
            </layout_if>
            
            <layout_if>
                <layout_if parameter="EQ On/Off" operator="=" value="1"/>
                <layout_if parameter="EQ Range" operator="=" value="0"/>
                <image_list id="background" src="Graph_Backgrounds/grphc_eq_12dB_ON.png"/>
            </layout_if>
            
            <layout_if>
                <layout_if parameter="EQ On/Off" operator="=" value="1"/>
                <layout_if parameter="EQ Range" operator="=" value="1"/>
                <image_list id="background" src="Graph_Backgrounds/grphc_eq_24dB_ON.png"/>
            </layout_if>
            
            <intercepts_mouse value="false"/>
        </view>
        
        <include src="./EQ_Graph.xml"/>
        <include src="./EQ_Buttons.xml"/>
    </view>
</view>
